@using BusPasajes.Models;
@model List<MarcaCLS> 
@{
    ViewBag.Title = "Index";
}

<h2>Marca</h2>
@Html.ActionLink("Agregar", "Agregar", "Marca", null, new { @class = "btn btn-primary"})
<br />
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td width="10%"># de Marca</td>
            <td width="20%">Nombre Marca</td>
            <td width="70%">Descripcion</td>
            @* //TOMA EL DISPLAY QUE SE TIENE DENTRO DE LA CLASE Y LO MARCA EN LA VISTA
            <td width="10%">@Html.LabelFor(p => Model[0].iidmarca)</td>
            <td width="20%">@Html.LabelFor(p => Model[0].nombre)</td>
            <td width="70%">@Html.LabelFor(p => Model[0].descripcion)</td>
            *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
                <tr>
                    <td>@item.iidmarca</td>
                    <td>@item.nombre</td>
                    <td>@item.descripcion</td>
                </tr>
            }
    </tbody>
